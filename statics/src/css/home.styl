@import 'nib'
@import './constant'


headerCss()
  line-height 40px
  color #000
  font-size 18px
  position relative
  .search
    position absolute
    right 0
    height 100%
    width 40px
    cursor pointer
    color #24bd7a
  span
    i
      font-size 12px
      color #24bd7a
      margin-left 5px
      
bannerCss()
  border-top 1px solid #b8b8b8
  border-bottom 1px solid #b8b8b8
  position relative
  height 110px
  overflow hidden
  ul
    margin 0
    padding 0
  .item
    position absolute
    left 0
    top 0
    height 100%
    transform translate3d(100%, 0, 0)
    &:nth-child(1)
      transform translate3d(0, 0, 0)
    img
      display block
      width 100%
  .dotList
    text-align center
    position absolute
    bottom 0
    left 0
    right 0
    .dot
      display inline-block
      width 10px
      height @width
      margin 0 5px
      background-color #fff
      border-radius 30px
      opacity 0.8
      &:nth-child(1)
        opacity 1
        
categoryListCss()
  margin 0
  padding 0
  li
    display inline-block
    width 25%
    padding 20px 0
    &:nth-child(1) a
      background-color #f88839
    &:nth-child(2) a
      background-color #5ed35e
    &:nth-child(3) a
      background-color #59b7ff
    &:nth-child(4) a
      background-color #f2436c
    a
      margin auto
      display block
      color #fff
      width 50px
      height @width
      line-height @height
      border-radius @width
      
recommandBookCss()
  margin 0 15px
  h3
    .more
      height 100%
      font-size 16px
      color #24bd7a
    .border
      border-bottom 1px solid #d5d5d5  
      margin -13px 60px 0 110px
  ul
    margin 30px 0
    padding 0
    li
      list-style none
      overflow hidden
      margin-bottom 15px
      .name
        font-size 18px
      .infos
        color #737373
        margin-left 10px
        .type
          padding-right 3px
          border-right 1px solid #737373
        .author
          padding-left 3px
      .desc
        color #737373
      &:nth-child(1)
        $coverWidth = 100px;
        .cover
          width $coverWidth
          img
            display block
            width 100%
        .content
          margin-left $coverWidth + 10px
          .infos
            margin-left 0
          .desc
            margin-top 20px
            
        
.homePage
  .header
    headerCss()
  .bannerContainer
    bannerCss()
  .categoryList
    categoryListCss()
  .recommandBooks
    recommandBookCss()
